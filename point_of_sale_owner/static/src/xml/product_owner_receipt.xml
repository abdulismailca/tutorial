<?xml version="1.0" encoding="UTF-8"?>
<templates id="product_owner_pos" xml:space="preserve">
    <t t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">

            <xpath expr="//div[hasclass('product-name')]" position="after">

            <t t-if="this.props.line.product_owner">
                <div style="position:absolute; top:28px;  right:6px; ">
                Owner - <t t-esc="this.props.line.product_owner"/>
            </div>
            </t>
            </xpath>
    </t>
</templates>