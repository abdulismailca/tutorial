<?xml version="1.0" encoding="UTF-8"?>
<!--product owner field to product card-->

<templates id="product_owner_template" xml:space="preserve">
   <t t-name="product_owner_name" t-inherit="point_of_sale.ProductCard"
      t-inherit-mode="extension">
       <xpath expr="//div[hasclass('product-img')]" position="after">
           <t t-if="props.product.product_owner_name">
               <div style="position:absolute; top:0px; left:0px; background:gold; height:23px; border-radius:0 0 50px 0; width:101px;">
                  <t t-esc="props.product.product_owner_name"/>
               </div>
           </t>
       </xpath>
   </t>
</templates>







