<odoo>
    <record id="view_project_kanban_inherit_progress" model="ir.ui.view">
        <field name="name">project.project.kanban.inherit.progress</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <!-- Find a spot inside the card -->
            <xpath expr="//div[contains(@class, 'o_project_kanban_boxes')]" position="inside">
                <div class="o_kanban_progress" style="margin-top: 8px;">
                    <field name="progress" widget="progressbar"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
