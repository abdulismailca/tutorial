<templates id="template" xml:space="preserve">
   <t t-name="custom_pos_receipt.OrderReceipt"
      t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
         <xpath expr="//div[hasclass('pos-receipt')]//div[hasclass('before-footer')]" position="inside">

        <t t-log="'helo',this.props.data.orderlines"/>
             <table  class="table border" style="margin-top:3px;">
                <tr class="border">
                    <th>Product</th>
                   <th>Rating</th>

                </tr>
                <t t-foreach="this.props.data.orderlines" t-key="tt_index" t-as="tt">
                    <t t-set="quality_rating_value"
                       t-value="tt['quality_rating']"/>
                <tr class="table border">
                    <t t-log="tt"/>
                    <td><t t-esc="tt['productName']"/></td>
                    <t t-if="quality_rating_value == '1'">
                         <td>⭐</td>

                    </t>
                    <t t-if="quality_rating_value == '2'">
                         <td>⭐⭐</td>

                    </t>
                    <t t-if="quality_rating_value == '3'">
                         <td>⭐⭐⭐</td>

                    </t>
                    <t t-if="quality_rating_value == '4'">
                         <td>⭐⭐⭐⭐</td>

                    </t>
                    <t t-if="quality_rating_value == '5'">
                         <td>⭐⭐⭐⭐⭐</td>

                    </t>
                    <t t-else="">
                         <td></td>
                    </t>
                </tr>
                </t>
             </table>
        </xpath>
   </t>
</templates>
