<?xml version="1.0" encoding="UTF-8"?>
<!--quality rating field to product card-->
<templates id="quality_rating_template" xml:space="preserve">
   <t t-name="quality_rating_name" t-inherit="point_of_sale.ProductCard"
      t-inherit-mode="extension">

       <xpath expr="//div[hasclass('product-img')]" position="after">
       <t t-log="this.props"/>
<!--           <t t-esc="'test'+props.productId.quality_rating"/>-->
           <div style="position:absolute; top:0; left:10px; background: royalblue; border-radius: 3px; height:20px; margin-top:3px;">
                <p><t t-esc="props.product.quality_rating"/>-Star Rating</p>
            </div>

       </xpath>
   </t>
</templates>







