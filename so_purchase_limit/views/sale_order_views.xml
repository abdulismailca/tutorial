<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="status_bar_products_sale_order_form_view_inherit"
            model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="attributes">

                <attribute name="invisible">state == 'to_approve'</attribute>

            </xpath>
            <xpath  expr="//field[@name='state']" position="after">

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,sent,to_approve,sale"
                           invisible="state != 'to_approve'"/>

            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="attributes">

                <attribute name="invisible">1</attribute>

            </xpath>
            <xpath expr="//button[@id='action_confirm']" position="attributes">

                <attribute name="invisible">1</attribute>

            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">

                <attribute name="invisible">state == 'to_approve'</attribute>

            </xpath>
             <xpath expr="//button[@name='action_quotation_send']" position="after">

                <button name="compute_waiting_to_approve" type="object"
                            string="To Approve" class="btn-primary" invisible="state in ['draft', 'to_approve']"/>

            </xpath>
             <xpath expr="//button[@name='action_quotation_send']" position="after">

                <button name="approve_waiting" type="object"
                            string="Approve" class="btn-primary" invisible="state !='to_approve' or is_visible_approve_button ==False"/>

            </xpath>

        </field>
    </record>
</odoo>



