<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="machine_tags_list_view" model="ir.ui.view">
        <field name="name">machine.tags.list</field>
        <field name="model">machine.tags</field>
        <field name="arch" type="xml">
            <list string="Machine Tags Record" editable="bottom">
                <field name="machine_tags"/>
                <field name="color" widget="color_picker"/>

            </list>
        </field>
    </record>
    <record id="machine_tags_list_action" model="ir.actions.act_window">
        <field name="name">Machine Tags</field>
        <field name="res_model">machine.tags</field>
        <field name="view_mode">list</field>
    </record>
</odoo>



