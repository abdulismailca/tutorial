<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
<t t-name="machine_management.machine_chunk_wise">
    <t t-log="chunkData"/>


    <t t-log="'unique id from temp'+uniqueid"/>


             <div t-attf-id="my_dynamic_id{{uniqueid}}" class="container carousel slide"
         data-bs-ride="carousel" style="margin-top:30px" t-att-data-bs-interval="interval">

<!--    <div id="course_carousel" class="container carousel slide"-->
<!--         data-bs-ride="carousel" style="margin-top:30px" t-att-data-bs-interval="interval">-->

    <div class="carousel-inner row w-100 mx-auto" role="listbox">

    <t t-foreach="chunkData" t-as="chunk" t-key="chunk['id']">

    <div t-att-class="chunk.is_active ? 'carousel-item active' : 'carousel-item'">

    <div class="row">

    <t t-foreach="chunk" t-as="item"      t-key="item['id']">

    <div class="block span3 col-3">

    <div class="card-group">


    <div class="card">

         <a t-att-href="'/my/machine/home/'+item['id']">

              <img class="card-img-top" t-att-src="'/web/image/machine.management/' + item['id'] + '/image'"
         style="padding: 0px; margin:0px; height: 200px; width:305px;"/>

         </a>

<!--    <img class="card-img-top" t-att-src="'/web/image/machine.management/' + item['id'] + '/image'"-->
<!--         style="padding: 0px; margin:0px; height: 200px; width:305px;"/>-->

<!--         <div class="col-9">-->
<!--                            <img t-att-src="'/web/image/machine.management/%s/image' %(item.id)"  alt="Machine Image" style="height:90px"/>-->
<!--                        </div>-->

<!--         <img t-att-src="'/web/image/machine.management/' + item['id'] + '/image'"-->
<!--                         class="card-img-top" alt="machine image"/>-->


        <h5 class="card-title" style="margin:15px 0 5px 16px; font-size: 25px;">
                            <strong>
                                <t t-esc="item.name"/>
                            </strong>

                        </h5>

        <p class="card-text" style="margin:5px 0 0 16px">
                            <strong>Purchase Date: <t t-esc="item.date_of_purchase"/></strong>

                        </p>

            <p class="card-text" style="margin:5px 0 0 16px">
                            <strong>
                                 Serial No: <t t-esc="item.serial_number"/>

                            </strong>


                        </p>


        <t t-if="item.description">
            <p class="card-text" style="margin:5px 0 0 16px">


                            <strong>
                                 Description:
                                <t t-esc="item.description"/>

                            </strong>



                        </p>

        </t>




<!--        <h5 class="mb-0" style=";color: #0D5272;font-weight: 600;justify-content: center;-->
<!--           align-items: center;font-size: 20px;-->
<!--            margin-left: 16px;"><t t-esc="item.name"/></h5><br/>-->
<!--        <p class="mb-0" style=";color: #0D5272;font-weight: 600;justify-content: center;-->
<!--           align-items: center;font-size: 20px;-->
<!--            margin-left: 16px;"><t t-esc="item.date_of_purchase"/></p><br/>-->

        <p class="ref-prdt-price"
           style="color: #0D5272;font-weight: 600;justify-content: center;
           align-items: center;font-size: 20px;
            margin-left: 16px;">
            <span class="ref-prdt-offer-price"
                  data-oe-type="monetary"
                  data-oe-expression="item.list_price">$
                <span
                        class="oe_currency_value"
                        t-esc="item.purchase_value"/>
            </span>
        </p>


    </div>

    </div>

    </div>
    </t>

    </div>

    </div>

    </t>

    </div>

    </div>

        <a t-attf-href="#my_dynamic_id{{uniqueid}}" class="carousel-control-prev"
        data-bs-slide="prev" role="button" aria-label="Previous"
        title="Previous">

    <span class="fa fa-chevron-circle-left fa-2x"/>
            <span class="visually-hidden">Previous</span>

    </a>
        <a t-attf-href="#my_dynamic_id{{uniqueid}}" class="carousel-control-next"
        data-bs-slide="next" role="button" aria-label="Next" title="Next">

    <span class="fa fa-chevron-circle-right fa-2x"/>

            <span class="visually-hidden">Next</span>

    </a>
    </t>
    </templates>



