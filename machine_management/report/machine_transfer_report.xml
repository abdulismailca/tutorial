<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_machine_transfer">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align:center; margin-bottom: 20px;">Machine Transfer Report</h2><hr/>


                    <t t-set="all_customers"
                       t-value="[d['customer_name'] for d in docs if d.get('customer_name')]"/>
                    <t t-set="unique_customers"
                       t-value="list(set(all_customers))"/>

                    <t t-set="install_transfers" t-value="[d for d in docs if d['transfer_type'] == 'install']"/>
                    <t t-set="remove_transfers" t-value="[d for d in docs if d['transfer_type'] == 'remove']"/>

                    <t t-if="len(unique_customers) == 1">
                        <p>
                            <strong>Customer:
                                <span t-esc="unique_customers[0]"/>
                            </strong>
                        </p>
                    </t>


                    <t t-if ="install_transfers">

                        <h5 style="margin-top:20px; margin-bottom: 20px;">Install Transfers:-</h5>

                    <table class="table table-borderless" style="text-align:center;">
                        <thead>
                            <tr style="border-bottom: 1px solid #ddd;">

                                 <th style="text-align:center;" class="fw-bold">Machine</th>
                                <th style="text-align:center;" class="fw-bold">Date</th>
                                <th style="text-align:center;" class="fw-bold">Transfer Type</th>
                                <th t-if="len(unique_customers) &gt; 1" style="text-align:center;" class="fw-bold">Customer</th>


                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="[d for d in docs if d['transfer_type'] == 'install']" t-as="t">
                                <tr style="border-bottom: 1px solid #ddd;">
                                    <td><span t-esc="t['machine_name']"/></td>
                                    <td><span t-esc="t['transfer_date']" /></td>
                                    <td><span t-esc="t['transfer_type'][:1].upper() + t['transfer_type'][1:]"/></td>
                                    <td t-if="len(unique_customers) &gt; 1"><span t-esc="t['customer_name']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    </t>
                    <t t-if ="remove_transfers">
                        <h5 style="margin-top:15px;margin-bottom: 20px; margin-top: 20px;">Remove Transfers:-</h5>
                    <table class="table table-borderless" style="text-align:center;">
                        <thead>
                            <tr style="border-bottom: 1px solid #ddd;">

                                    <th style="text-align:center;" class="fw-bold">
                                    Machine
                                </th>
                                <th style="text-align:center;" class="fw-bold">
                                    Date
                                </th>
                                <th style="text-align:center;" class="fw-bold">
                                    Transfer Type
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="[d for d in docs if d['transfer_type'] == 'remove']" t-as="t">
                                <tr style="border-bottom: 1px solid #ddd;">
                                    <td><span t-esc="t['machine_name']"/></td>
                                    <td><span t-esc="t['transfer_date']" /></td>
                                    <td><span t-esc="t['transfer_type'][:1].upper() + t['transfer_type'][1:]"/></td>

                                </tr>
                            </t>
                        </tbody>
                    </table>

                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
