<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="mail_template_hr_leave_details" model="mail.template">
            <field name="name">Email for Hr Leave Details</field>
            <field name="model_id"
                   ref="spotter_sale_order_approval.model_hr_leave"/>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="email_to">{{object.employee_id.work_email}}</field>
            <field name="subject">Hr Leave Details</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="justify-content: center;background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:40%">
                        <h2>
                            Hi,
                            <t t-out="object.employee_id.name"/>
                        </h2>
                        <div>
                            <h3>
                                We are Informing you that
                                <t t-out="object.holiday_status_id.name"/>

                                Balance is <t t-out="object.number_of_days"/>
                                Actually is <t t-out="object.remaining_this_time_off"/>

                            </h3>
                            <h3>
                                Have a nice day!
                            </h3>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    Regards,
                    <br/>
                    <t t-out="object.company_id.name"/>
                    <br/>
                </div>
            </field>
        </record>
    </data>
</odoo>
