<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_view_move_form_inherit_sale_order_ids"
            model="ir.ui.view">
        <field name="name">account.move.form.inherits</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoice_tab']" position="after">
                <page string="All invoice Lines">
                    <field name="all_invoice_lines_ids">
                        <list>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal"/>
                            <field name="account_move_id"/>
                            <button name="add_invoice_line" type="object"
                                    title="action_confirm" icon="fa-check"/>

                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>



