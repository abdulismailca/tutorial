<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_crm_limit_view_form"
            model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">

                <block title="Time Limit">
                    <setting id="set_message_limit"
                             help="Set a message limit to customer on crm.">
                        <field name="crm_message_limit"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
