<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    project template action-->
    <record id="project_template_menu_template_project_template_action"
            model="ir.actions.act_window">
        <field name="name">Project templates</field>
        <field name="res_model">project.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--    project template form view-->

    <record id="project_template_form_view" model="ir.ui.view">
        <field name="name">project.template.form</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <form string="Project Template">
                <header>
                    <!-- create project -->
                    <button name="create_project_from_temp" type="object"
                            string="Create Project" class="btn-primary"/>




                </header>

                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="name" nolabel="1"/>
                            </h1>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="label_tasks"/>
                            <field name="partner_id"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Task">
                            <field name="task_ids"/>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--    project template list view-->
    <record id="project_template_list_view" model="ir.ui.view">
        <field name="name">Project Template</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <list string="Project template record">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="label_tasks"/>
                <field name="user_id"/>
                <field name="tag_ids" widget="many2many_tags"
                       options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>


    <record id="project_template_menu_template_task_template_action"
            model="ir.actions.act_window">
        <field name="name">Task templates</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">form</field>
    </record>


</odoo>



