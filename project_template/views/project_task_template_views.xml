<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    project template action-->
    <record id="project_template_menu_template_task_template_action"
            model="ir.actions.act_window">
        <field name="name">Project templates</field>
        <field name="res_model">project.task.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--    project task template form view-->

    <record id="project_task_template_form_view" model="ir.ui.view">
        <field name="name">project.task.template.form</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <form string="Task Template">
                <header>
                    <!-- create project -->
                    <button name="create_task_from_temp" type="object"
                            string="Create Task" class="btn-primary"/>
                </header>
                <sheet>
<!--                    view related task smart button-->
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button"
                                type="object"

                                icon="fa-exchange"
                                name="view_related_task">
                            <field string="Related Task"
                                   name="task_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <h1>
                                <field name="name" nolabel="1"/>
                            </h1>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="milestone_id"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--        project task template list view-->
    <record id="task_template_list_view" model="ir.ui.view">
        <field name="name">project.task.template.list</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <list string="Project template record">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="project_id"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="tag_ids" widget="many2many_tags"
                       options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>
</odoo>



