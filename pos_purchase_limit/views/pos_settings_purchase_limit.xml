<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_purchase_limit_view_form"
            model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_accounting_section']"
                   position="after">
                <block title="Purchase Limit">
                    <setting id="multiple_prices_setting"
                             help="Set a purchase limit to customer on pos.">
                        <field name="is_activate_purchase_limit_res_settings"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
