<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Normal View -->
    <record id="estate_form_view" model="ir.ui.view">
        <field name="name">property.name.form</field>
        <field name="model">property.name</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="action_sold" type="object" string="Sold"
                            invisible="stage=='sold' or stage=='canceled'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="stage =='sold' or stage =='canceled'"/>
                    <field name="stage" widget="statusbar"
                           statusbar_visible="new,offer_accepted, offer_received, sold, canceled"/>
                </header>
                <sheet>

                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>
                    <group>
                        <group>
                            <field name="stage"/>
                            <field name="property_types" options="{'no_create':'true'}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="garden == False"/>
                                    <field name="garden_orientation" invisible="garden == False"/>
                                    <field name="garage"/>


                                </group>
                                <group>
                                    <field name="active"/>
                                    <field name="last_seen"/>
                                    <field name="total_area"/>
                                    <field name="property_tags" widget="many2many_tags"
                                           options="{'color_field':'color'}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="sales_man"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer"
                                   readonly="stage =='sold' or stage=='offer_accepted' or stage=='canceled' "/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!--    List View -->

    <record id="estate_list" model="ir.ui.view">
        <field name="name">property.name.list</field>
        <field name="model">property.name</field>
        <field name="arch" type="xml">
            <list string="my_records">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="property_tags" widget="many2many_tags"
                       options="{'color_field':'color'}"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>


    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property.name</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>





